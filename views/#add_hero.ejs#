<!doctype html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/stylesheet.css">
    
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#hero-submit').click(function () {
                var payload = {
                    Hero_name: $('#hero-name').val(),
                    FName: $('#FName').val(),
	            LName: $('#LName').val(),
	            Identity: $('#Identity').val()
                };

        console.log(payload);

                $.ajax({
                    url: "/hero/create",
                    type: "POST",
                    contentType: "application/json",
                    processData: false,
                    data: JSON.stringify(payload),
                    complete: function (data) {
                        $('#output').html(data.responseText);
                    }
                });
            });
        });
    </script>
  </head>
  <div id="header" style="background-color:#2E2E2E;width:700px;">
    <h1 style="margin-bottom:0; text-align:center"><font color="White">Add Heroes </font></h1></div>

<% include menu %>
   <div id="content" style="background-color:#848484;height:700px;width:600px;float:left;   text-align:left">

  <body>
    <h3>Enter a hero to add to our database:</h3>
    Hero: <input id="hero-name" type="text" /> <br />
    First Name: <input id="FName" type="text" /> <br />
    Last Name: <input id="LName" type="text" /> <br />
    Identity: <input id="Identity" type="text" /> <br />

    <input id="hero-submit" type="submit" />
    <p id="output"></p>
  </body></div>
<% include footer %>
